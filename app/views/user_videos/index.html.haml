%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
      = form_tag update_queue_path do
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queued_videos.each do |queued_video|
              %tr
                = hidden_field_tag "queued_videos[][:id]", queued_video.id
                %td= text_field_tag "queued_videos[][:order]", queued_video.order
                %td
                  = link_to queued_video.title, queued_video.video
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  %select.form-group(name="queued_videos[][:rating]")
                    %option(value="5") 5 Stars
                    %option(value="4") 4 Stars
                    %option(value="3") 3 Stars
                    %option(value="2") 2 Stars
                    %option(value="1") 1 Star
                %td
                  = link_to queued_video, method: :delete do
                    %i.glyphicon.glyphicon-remove
        = submit_tag "Update Instant Queue", class: "btn btn-default"
